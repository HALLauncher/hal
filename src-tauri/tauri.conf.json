{
	"build": {
		"beforeBuildCommand": "yarn build",
		"beforeDevCommand": "yarn dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "hal",
		"version": "0.2.0"
	},

	"tauri": {
		"allowlist": {
			"all": true,
			"fs": {
				"scope": ["**"]
			},
			"protocol": {
				"asset": true,
				"assetScope": ["**"]
			}
		},
		"cli": {
			"args": [
				{
					"name": "skip_paradox_sync"
				}
			]
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "ru.voidptrt.hal",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [
				"steam_api64.dll"
			],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},

		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 700,
				"resizable": true,
				"label": "main",
				"title": "HAL",
				"width": 1200,
				"minHeight": 600,
				"minWidth": 800
			}
		]
	}
}
